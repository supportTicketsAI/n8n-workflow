# n8n Configuration
N8N_BASIC_AUTH_ACTIVE=true
N8N_BASIC_AUTH_USER=admin
N8N_BASIC_AUTH_PASSWORD=your-secure-password

# Database Configuration (Railway PostgreSQL)
DB_TYPE=postgresdb
DB_POSTGRESDB_HOST=your-railway-postgres-host
DB_POSTGRESDB_PORT=5432
DB_POSTGRESDB_DATABASE=railway
DB_POSTGRESDB_USER=postgres
DB_POSTGRESDB_PASSWORD=your-postgres-password

# Application Configuration
N8N_HOST=0.0.0.0
N8N_PORT=5678
N8N_PROTOCOL=https
NODE_ENV=production

# Webhook and External Access
N8N_EDITOR_BASE_URL=https://your-app-name.railway.app
WEBHOOK_URL=https://your-app-name.railway.app